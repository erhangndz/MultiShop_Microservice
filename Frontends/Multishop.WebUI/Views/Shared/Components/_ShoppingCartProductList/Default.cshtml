@model BasketTotalDto

<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model.BasketItems)
            {
                <tr>
                    <td class="align-middle"><img src="@item.ImageUrl" alt="" style="width: 50px;"> @item.ProductName</td>
                    <td class="align-middle">@item.Price ₺</td>
                    <td class="align-middle">
                        <div class="input-group quantity mx-auto" style="width: 100px;">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Quantity">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td class="align-middle">@(item.Price* item.Quantity)</td>
                    <td class="align-middle"><a class="btn btn-sm btn-danger" href="/ShoppingCart/RemoveBasketItem/@item.ProductId"><i class="fa fa-times"></i></a></td>
                </tr>
            }
           
       
        </tbody>
    </table>
</div>